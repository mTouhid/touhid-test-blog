<h1 class="display-1">Articles</h1>
<% @articles.each do |a| %>
<div class="row">
  <div class="row">
    <div class="col-8 mt-4">
      <div class="card shadow mb-5 bg-body rounded">
        <div class="card-header">
          Author: <%= a.user.username if a.user %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to a.title, article_path(a), class: "text-primary" %></h5>
          <p class="card-text"><%= truncate(a.description, length: 150) %></p>
          <%= link_to 'View', article_path(a), class: "btn btn-outline-primary" %> <%= link_to 'Edit', edit_article_path(a), class: "btn btn-outline-warning" %> <%= link_to 'Delete', article_path(a), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure?" } %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(a.created_at) %> ago, updated <%= time_ago_in_words(a.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>