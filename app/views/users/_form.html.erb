<%= render 'layouts/errors', obj: @user %>

<%= form_with(model: @user, local: true, class: "shadow col-10 border mt-4 p-4") do |f| %>

  <div class="mb-3">
    <%= f.label :username, class: "form-label" %>
    <%= f.text_field :username, class: "form-control form-control-lg", placeholder: "Enter your username" %>
  </div>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Enter your email address" %>
  </div>
  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Enter your password" %>
  </div>

  <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-success mb-3") %>

<% end %>